{
  "compilerOptions": {
    "lib": ["es6", "es2017"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    // "baseUrl": "./src",
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true
    // "allowJs": true
  },
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "**/__mocks__"],
  "include": ["src"]
}
